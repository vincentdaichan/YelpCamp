<%- include('../partials/header'); %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a New Campground</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form class="" action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="8" cols="80"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-dark btn-block" type="submit" name="button">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

<%- include('../partials/footer'); %>
